import React, { useState, useEffect } from 'react';
import { initializeApp } from 'firebase/app';
import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from 'firebase/auth';
import { getFirestore, doc, onSnapshot, updateDoc, setDoc, getDoc, collection } from 'firebase/firestore';
import { TreeDeciduous, Plus, Minus, Lock, Unlock, TreePine, MapPin, Calendar, Info } from 'lucide-react';

// Firebase configuratie
const firebaseConfig = JSON.parse(__firebase_config);
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'kerstbomen-app-2025';

export default function App() {
  const [count, setCount] = useState(0);
  const [user, setUser] = useState(null);
  const [view, setView] = useState('home'); // 'home' of 'admin'
  const [password, setPassword] = useState('');
  const [isAuthorized, setIsAuthorized] = useState(false);
  const [error, setError] = useState('');
  const [loading, setLoading] = useState(true);

  // Stap 1: Authenticatie (Volgens RULE 3)
  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (err) {
        console.error("Auth error:", err);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, (u) => {
      setUser(u);
      setLoading(false);
    });
    return () => unsubscribe();
  }, []);

  // Stap 2: Firestore Listener voor de teller (Volgens RULE 1 & 2)
  useEffect(() => {
    if (!user) return;

    // RULE 1: Pad moet zijn artifacts/{appId}/public/data/{collectionName}/{docId}
    // We gebruiken 'counters' als collectie en 'main' als documentId (6 segmenten = even)
    const counterRef = doc(db, 'artifacts', appId, 'public', 'data', 'counters', 'main');
    
    const unsubscribe = onSnapshot(counterRef, (docSnap) => {
      if (docSnap.exists()) {
        setCount(docSnap.data().total || 0);
      } else {
        // Initialiseer teller als deze nog niet bestaat
        setDoc(counterRef, { total: 0 }).catch(console.error);
      }
    }, (err) => {
      console.error("Firestore snapshot error:", err);
    });

    return () => unsubscribe();
  }, [user]);

  // Functie om de teller aan te passen
  const updateCounter = async (delta) => {
    if (!isAuthorized || !user) return;
    const counterRef = doc(db, 'artifacts', appId, 'public', 'data', 'counters', 'main');
    try {
      await updateDoc(counterRef, {
        total: Math.max(0, count + delta)
      });
    } catch (err) {
      console.error("Update error:", err);
    }
  };

  const handleLogin = (e) => {
    e.preventDefault();
    if (password === 'kerstboom2025' || password === 'GijsEnMenno') {
      setIsAuthorized(true);
      setError('');
    } else {
      setError('Verkeerd wachtwoord!');
      setPassword('');
    }
  };

  const Snowflakes = () => (
    <div className="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      {[...Array(20)].map((_, i) => (
        <div
          key={i}
          className="absolute text-white opacity-20 animate-bounce"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            animationDuration: `${3 + Math.random() * 5}s`,
            fontSize: `${Math.random() * 20 + 10}px`
          }}
        >
          ❄
        </div>
      ))}
    </div>
  );

  if (loading) {
    return (
      <div className="min-h-screen bg-slate-900 flex items-center justify-center">
        <div className="text-green-400 animate-pulse font-bold text-xl text-center">
          <TreePine className="w-12 h-12 mx-auto mb-4" />
          Laden...
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-slate-900 text-slate-100 font-sans selection:bg-green-500/30">
      <Snowflakes />
      
      {/* Navbar */}
      <nav className="relative z-10 flex justify-between items-center p-6 max-w-6xl mx-auto">
        <div className="flex items-center gap-2 font-bold text-xl tracking-tight text-green-400">
          <TreePine className="w-8 h-8" />
          <span>KERSTBOMEN <span className="text-white font-light">ACTIE</span></span>
        </div>
        <button 
          onClick={() => setView(view === 'home' ? 'admin' : 'home')}
          className="text-slate-400 hover:text-white transition-colors p-2"
        >
          {view === 'home' ? <Lock className="w-5 h-5" /> : <span className="text-sm font-bold bg-slate-800 px-3 py-1 rounded-full">Terug</span>}
        </button>
      </nav>

      <main className="relative z-10 max-w-4xl mx-auto px-6 py-12 text-center">
        
        {view === 'home' ? (
          <div className="space-y-12 animate-in fade-in duration-700">
            <header className="space-y-4">
              <h1 className="text-5xl md:text-7xl font-black text-white leading-tight">
                Wij halen jullie <br />
                <span className="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-600">
                  Kerstbomen op!
                </span>
              </h1>
              <p className="text-slate-400 text-lg md:text-xl max-w-2xl mx-auto italic">
                Samen houden we de wijk schoon na de feestdagen.
              </p>
            </header>

            {/* De Teller */}
            <div className="relative inline-block group">
              <div className="absolute -inset-4 bg-gradient-to-r from-green-500 to-emerald-500 rounded-3xl blur opacity-25 group-hover:opacity-40 transition duration-1000"></div>
              <div className="relative bg-slate-800 border border-slate-700 rounded-3xl p-10 md:p-16 shadow-2xl">
                <p className="text-sm font-bold uppercase tracking-[0.2em] text-green-400 mb-4">Aantal Verzameld</p>
                <div className="text-8xl md:text-9xl font-black tabular-nums tracking-tighter text-white">
                  {count}
                </div>
                <div className="mt-6 flex justify-center items-center gap-2 text-slate-400">
                  <TreeDeciduous className="w-6 h-6 animate-pulse" />
                  <span className="font-medium">En de teller loopt nog!</span>
                </div>
              </div>
            </div>

            {/* Info sectie */}
            <div className="grid md:grid-cols-3 gap-6 text-left mt-20">
              <div className="bg-slate-800/50 p-6 rounded-2xl border border-slate-700">
                <Calendar className="w-8 h-8 text-green-400 mb-4" />
                <h3 className="font-bold text-lg mb-2 text-white">Wanneer?</h3>
                <p className="text-slate-400 text-sm">Direct na Oud & Nieuw komen we langs in de straten.</p>
              </div>
              <div className="bg-slate-800/50 p-6 rounded-2xl border border-slate-700">
                <MapPin className="w-8 h-8 text-green-400 mb-4" />
                <h3 className="font-bold text-lg mb-2 text-white">Waar?</h3>
                <p className="text-slate-400 text-sm">Overal in de wijk. Leg je boom aan de straat of spreek ons aan!</p>
              </div>
              <div className="bg-slate-800/50 p-6 rounded-2xl border border-slate-700">
                <Info className="w-8 h-8 text-green-400 mb-4" />
                <h3 className="font-bold text-lg mb-2 text-white">Wie?</h3>
                <p className="text-slate-400 text-sm">Menno & Gijs zorgen dat alle bomen netjes worden weggebracht.</p>
              </div>
            </div>
          </div>
        ) : (
          /* Admin Pagina */
          <div className="max-w-md mx-auto py-10">
            {!isAuthorized ? (
              <div className="bg-slate-800 p-8 rounded-3xl border border-slate-700 shadow-xl">
                <Lock className="w-12 h-12 text-green-400 mx-auto mb-6" />
                <h2 className="text-2xl font-bold mb-6 text-white">Beheerder Login</h2>
                <form onSubmit={handleLogin} className="space-y-4">
                  <input 
                    type="password" 
                    placeholder="Wachtwoord"
                    value={password}
                    onChange={(e) => setPassword(e.target.value)}
                    className="w-full bg-slate-900 border border-slate-600 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-green-500"
                  />
                  {error && <p className="text-red-400 text-sm">{error}</p>}
                  <button 
                    type="submit"
                    className="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 rounded-xl transition-colors"
                  >
                    Inloggen
                  </button>
                </form>
              </div>
            ) : (
              <div className="space-y-8 animate-in slide-in-from-bottom-4 duration-500">
                <div className="bg-slate-800 p-10 rounded-3xl border border-slate-700 shadow-2xl">
                  <Unlock className="w-12 h-12 text-green-400 mx-auto mb-4" />
                  <h2 className="text-2xl font-bold mb-2 text-white">Hoi Menno & Gijs!</h2>
                  <p className="text-slate-400 mb-8">Pas hier de score aan.</p>
                  
                  <div className="flex items-center justify-between gap-4">
                    <button 
                      onClick={() => updateCounter(-1)}
                      className="bg-slate-700 hover:bg-red-500/20 hover:text-red-400 p-6 rounded-2xl border border-slate-600 transition-all active:scale-90"
                    >
                      <Minus className="w-10 h-10" />
                    </button>
                    
                    <div className="text-7xl font-black text-white tabular-nums px-4">
                      {count}
                    </div>

                    <button 
                      onClick={() => updateCounter(1)}
                      className="bg-slate-700 hover:bg-green-500/20 hover:text-green-400 p-6 rounded-2xl border border-slate-600 transition-all active:scale-90"
                    >
                      <Plus className="w-10 h-10" />
                    </button>
                  </div>

                  <div className="mt-10 pt-10 border-t border-slate-700">
                    <button 
                      onClick={() => { setIsAuthorized(false); setView('home'); }}
                      className="text-slate-400 hover:text-white text-sm underline"
                    >
                      Uitloggen & Sluiten
                    </button>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}
      </main>

      <footer className="relative z-10 text-center py-10 text-slate-500 text-sm">
        <p>© 2025 Menno & Gijs Kerstbomen Inzamelactie</p>
      </footer>
    </div>
  );
}
